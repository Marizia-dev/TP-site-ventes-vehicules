{% extends 'base.html.twig' %}

{% block title %}Liste des véhicules{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Mon Site</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('login') }}">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('legal') }}">Mention légale</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container">
    <h1>Liste des véhicules</h1>

    <div class="row">
        {% for vehicule in vehicules %}
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="{{ vehicule.image }}" class="card-img-top" alt="{{ vehicule.nom }}">
                <div class="card-body">
                    <h5 class="card-title">{{ vehicule.nom }}</h5>
                    <p class="card-text">{{ vehicule.modele }}</p>
                    <p class="card-text">{{ vehicule.description }}</p>
                    <a href="{{ path('vehicule_edit', {'id': vehicule.id}) }}" class="btn btn-primary">Détails</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
