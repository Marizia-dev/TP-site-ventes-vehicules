{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">Connexion</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.email, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Email'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.password, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Mot de passe'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.save, {'label': 'Se connecter', 'attr': {'class': 'btn btn-primary btn-block'}}) }}
                    </div>
                    {{ form_end(form) }}
                    {% if error %}
                        <div class="alert alert-danger mt-3">{{ error }}</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
